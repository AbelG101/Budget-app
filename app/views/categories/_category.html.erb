<%= link_to category_purchases_path(category_id: category) do %> 
  <div id="<%= dom_id category %>" class="category flex justify-between">
    <div class="content flex justify-center">
      <img src=<%=category.icon%> alt=<%=category.name%> class="w-14 h-14">
      <h2 class="ml-2"><%= category.name %></h2>
    </div>

    <p>
      <%= category.purchases.sum(:amount) %>
    </p>

  </div>
<% end %>
